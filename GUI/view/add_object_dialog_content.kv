#:kivy 2.2.1


<DialogContent>:
    orientation: "vertical"
    # spacing: "12dp"
    size_hint_y: None
    adaptive_height: True

    GridLayout:
        cols: 3
        size_hint_y: None
        spacing: "8dp"
        MDTextField:
            write_tab: False
            id: coordinates_field_x
            hint_text: "Координата X"
            helper_text: "Например: 0;0, 27;27, 1980;1080"
            helper_text_mode: "on_focus"
            icon_left: "compass"
        MDTextField:
            write_tab: False
            id: coordinates_field_y
            hint_text: "Координата Y"
            helper_text: "Например: 0;0, 27;27, 1980;1080"
            helper_text_mode: "on_focus"
            icon_left: "compass"
        
        MDFloatingActionButton:
            type: "small"
            icon: "map-marker"
    GridLayout:
        cols: 1
        size_hint_y: None
        MDTextField:
            write_tab: False
            id: layer_field
            hint_text: "Слой"
            input_filter: "int"
            helper_text: "Номер слоя от 0 до 128"
            helper_text_mode: "on_focus"
            icon_left: "layers"
    
    GridLayout:
        cols: 2
        size_hint_y: None
        spacing: "12dp"
        MDTextField:
            write_tab: False
            id: width_field
            hint_text: "Ширина"
            input_filter: "int"
            icon_left: "arrow-left-right"
        MDTextField:
            write_tab: False
            id: height_field
            hint_text: "Высота"
            input_filter: "int"
            icon_left: "arrow-up-down"
